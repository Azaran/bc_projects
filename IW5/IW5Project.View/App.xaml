<Application x:Class="IW5Project.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:converters="clr-namespace:IW5Project.View.Converters"
             xmlns:viewModels="clr-namespace:IW5Project.ViewModels;assembly=IW5Project.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>


        <viewModels:MainViewModel x:Key="MainViewModel" />
        <viewModels:PersonsViewModel x:Key="PersonsViewModel"/>
        <viewModels:MoviesViewModel x:Key="MoviesViewModel"  />
        <viewModels:MovieRating x:Key="MovieRating"  />
        <viewModels:MovieDetailViewModel x:Key="MovieDetailViewModel"  />
        <viewModels:PersonDetailViewModel x:Key="PersonDetailViewModel"  />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Application.Resources>
</Application>

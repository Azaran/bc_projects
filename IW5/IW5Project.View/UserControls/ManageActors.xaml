<UserControl x:Class="IW5Project.View.UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IW5Project.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="White"
             DataContext="{StaticResource PersonsViewModel}">
    <Grid>
        <StackPanel>
        <TextBlock>Select actors</TextBlock>
            <ListBox x:Name="ActorsSelector" ItemsSource="{Binding Items}" SelectionMode="Multiple"/>

        </StackPanel>
    </Grid>
</UserControl>
